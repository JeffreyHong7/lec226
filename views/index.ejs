    </form>
    <div id="recipeContainer" class="hidden">
      <!-- If no recipe yet, show: -->
      <% if (!locals.recipeObject) { %>
      <h2>Pick your favourite taco ingredient ğŸ‘†</h2>
      <!-- Else, show the recipe name e.g. <h2>Recipe name</h2>-->
      <% } else { %>
      <h2><%= recipeObject["name"]%></h2>
      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <li>
          <%= recipeObject["ingredients"]["protein"]["name" ]%>, <%=
          recipeObject["ingredients"]["protein"]["preparation" ]%>
        </li>
        <li><%= recipeObject["ingredients"]["salsa"]["name" ]%></li>
        <% for (var i = 0; i < recipeObject["ingredients"]["toppings"].length;
        i++) { %>
        <li>
          <%= recipeObject["ingredients"]["toppings"][i]["quantity"]%> of <%=
          recipeObject["ingredients"]["toppings"][i]["name"]%>
        </li>
        <% } %>
      </ul>
      <%}%>
    </div>
  </body>
